---
import Layout from "@/layouts/Layout.astro";
import courses from "@/config/courses.json";
import "@/styles/globals.css";
import Image from "astro/components/Image.astro";

import classroom1 from "@/assets/classroom1.jpeg";
import classroom2 from "@/assets/classroom2.jpeg";
import classroom3 from "@/assets/classroom3.jpeg";
import classroom4 from "@/assets/classroom4.jpeg";
---

<Layout title="Cursos">
    <article class="py-20">
        <h1 class="text-4xl text-center mb-10 font-semibold text-neutral-50">
            CURSOS
        </h1>
        <div class="container mx-auto p-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:h-[600px]">
                <!-- Columna 1: 3 secciones verticales -->
                <div class="flex flex-col gap-2 md:h-full">
                    {
                        courses.map((course) => (
                            <div class="relative h-40 md:flex-1 rounded-2xl overflow-hidden group cursor-pointer transition-all duration-300">
  <!-- Imagen de fondo dinámica -->
  <div
    class="absolute inset-0 bg-cover bg-center scale-100 group-hover:scale-105 group-active:scale-100 group-hover:brightness-110 transition-all duration-500"
    style={`background-image: url(${course.image})`}
  ></div>

  <!-- Gradiente siempre visible encima -->
  <div class="absolute inset-0 bg-gradient-to-r from-lightgreen/60 to-transparent"></div>

  <!-- Contenido visible encima de todo -->
  <div class="relative z-10 p-4 text-white">
    <h4 class="uppercase text-2xl font-semibold">{course.title}</h4>

  </div>
</div>


                        ))
                    }
                </div>

<div class="relative h-40 md:h-full rounded-sm overflow-hidden group cursor-pointer transition-all duration-300">
  <!-- Imagen de fondo estática -->
  <div
    class="absolute inset-0 bg-cover bg-center group-hover:brightness-110 group-hover:scale-105 group-active:scale-100 transition-all duration-500"
    style={`background-image: url(${classroom1.src});`}
  ></div>

  <!-- Gradiente fijo encima -->
  <div class="absolute inset-0 bg-gradient-to-b from-lightgreen/60 to-lightergreen/20"></div>

  <!-- Contenido encima -->
  <div class="relative z-10 p-4">
    <h4 class="uppercase text-2xl text-white">Examenes internacionales</h4>
  </div>
</div>

            </div>
        </div>
    </article>

    
</Layout>


